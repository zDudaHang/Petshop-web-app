input LoginInput {
    username: String!
    password: String!
}

input RefreshTokenInput {
    refreshToken: String!
}

type SigninPayload {
    accessToken: String
    refreshToken: String
    user: User
}

extend type Mutation {
    login(input: LoginInput!): SigninPayload!
    refreshToken(input: RefreshTokenInput!): SigninPayload!
}

enum AuthenticationError {
    EXPIRED_ACCESS_TOKEN,
    EXPIRED_REFRESH_TOKEN,
}